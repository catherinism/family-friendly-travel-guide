<%= form_for (@guide) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <br>
  <%= f.label :summary %>
  <%= f.text_area :summary %>
  <br>
  <br>

  <%= f.label :destination_location, "Destination" %>
  <%= f.text_field :destination_location, list: "destinations_autocomplete" %>
  <datalist id="destinations_autocomplete">
    <% Destination.all.each do |destination| %>
    <option value="<%= destination.location %>">
      <% end %>
    </datalist>
    <br>
    <br>

    <%= f.submit "Submit Guide" %>

<% end %>
